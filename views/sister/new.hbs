<main><h2>Add a Sister</h2>
<form method="POST" action="/sisters" class="new-sister">
    <label for="name">Name:</label>
    <p class="first-name">First Name</p>
    <p class="last-name">Last Name</p>
    <input type="text" name="firstname" id="first-name" class="first-name">
    <input type="text" name="lastname" id="last-name" class="last-name">

    <label for="year">Graduation:</label>
    <input type="month" name="year" id="year">
        
    <label for="year">Pledge class:</label>
    <select name="pledgeclass">
        <option value="Alpha Omicron">Alpha Omicron</option>
        <option value="Alpha Pi">Alpha Pi</option>
        <option value="Alpha Sigma">Alpha Sigma</option>
        <option value="Alpha Tau">Alpha Tau</option>
    </select>
    

    <label for="family">Family</label>
        <select name="family">
            {{#each families as |family|}}
                <option value="{{family.name}}">{{family.name}}</p>
            {{/each}}
        </select>
    
    <label for="big">Big</label>
        <select name="big">
            {{#each sisters as |sister|}}
                <option value="{{sister.id}}">{{sister.firstname}} {{sister.lastname}}</p>
            {{/each}}
        </select>
    <p>
        <input type="submit" value="Submit">
    </p>
</form>
</main>